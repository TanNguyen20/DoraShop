<script src="/validatior.js"></script>
<script>
    $("#current-password").blur(function(){
        var password =$("#current-password").val();
        $.post("/user/checkpassword",{checkPassword: password},function(data, status){
            if(data!=="1"){
                $("#checkpassword").html(data);
                $(".btn-new-password").click(function(e){
                    e.preventDefault();
                })
            }
            else{
                $("#checkpassword").html("");
                $(".btn-new-password").unbind("click");

            }
        });
    });
    var form = new Validator("#changepassword");
    
</script>
