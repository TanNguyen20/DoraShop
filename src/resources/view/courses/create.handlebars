<div class="mt-4">
    <h3>Đăng khóa học lên website</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Ten khoa hoc</label>
            <input type="text" class="form-control" id="name" placeholder="Nhap ten khoa hoc" name="name">
        </div>
        <div class="form-group">
            <label for="discription">Mo ta</label>
            <input type="text" class="form-control" id="discription" placeholder="Nhap mieu ta" name="discription">
        </div>
        <div class="form-group">
            <label for="videoId">ID video</label>
            <input type="text" class="form-control" id="videoId" placeholder="Nhap id video" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Cap do</label>
            <input type="text" class="form-control" id="level" placeholder="Nhap cap do" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học lên website</button>
    </form>
</div>